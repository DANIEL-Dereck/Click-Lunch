<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_list_shop_item_name"
        android:layout_margin="@dimen/dimenMarginSearchBar"
        android:textColor="@color/colorOrangeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimenTextSize"
        android:text="test"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

<!--
    <ImageView
        android:id="@+id/iv_list_shop_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/tv_list_shop_item_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_list_shop_item_distance"
        app:layout_constraintRight_toRightOf="parent"
        />
-->

    <TextView
        android:id="@+id/tv_list_shop_item_distance"
        android:layout_margin="@dimen/dimenMarginSearchBar"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimenTextSize"
        app:layout_constraintRight_toLeftOf="@id/tv_list_shop_item_category"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_list_shop_item_name"
        />

    <TextView
        android:id="@+id/tv_list_shop_item_category"
        android:layout_margin="@dimen/dimenMarginSearchBar"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimenTextSize"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_list_shop_item_distance"
        app:layout_constraintTop_toBottomOf="@+id/tv_list_shop_item_name"
        />


</FrameLayout>